{% extends 'base.html.twig' %}

{% block title %}Genre
{% endblock %}

{% block body %}
	<h1>Genre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ genre.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ genre.nom }}</td>
			</tr>
			<tr>
				<th>Livres</th>
				<td>
					{% for livre in genre.livres %}
						<span>{{ livre }}</span><br>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('genre_edit', {'id': genre.id}) }}">Modifier</a>

		{{ include('genre/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
