{% extends 'base.html.twig' %}

{% block title %}Auteur
{% endblock %}

{% block body %}
	<h1>Auteur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ auteur.id }}</td>
			</tr>
			<tr>
				<th>Nom et Prenom</th>
				<td>{{ auteur.nomPrenom }}</td>
			</tr>
			<tr>
				<th>Sexe</th>
				<td>{{ auteur.sexe }}</td>
			</tr>
			<tr>
				<th>Date de naissance</th>
				<td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Nationalite</th>
				<td>{{ auteur.nationalite }}</td>
			</tr>
			<tr>
				<th>Livres</th>
				<td>
					{% for livre in auteur.livres %}
						<span>
							{{ livre }}
						</span><br>
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('auteur_edit', {'id': auteur.id}) }}">Modifier</a>

		{{ include('auteur/_delete_form.html.twig') }}
	{% endif %}


{% endblock %}
